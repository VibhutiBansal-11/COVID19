<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDoctor"
    android:background="#ffffff">

    <View
        android:id="@+id/view"
        android:layout_width="419dp"
        android:layout_height="347dp"
        android:background="#2e0239"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Add Doctors"
        android:textColor="#fff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/character"
        android:layout_below="@id/text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/imageDoctor"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Profile Photo"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_below="@id/imageDoctor"
        android:textSize="20sp"
        android:textColor="#fff"
        android:id="@+id/textProfile"/>
    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/textProfile"
        android:layout_marginTop="90dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:hint="Doctor Name"
        android:background="@drawable/button"
        android:textColor="@color/colorBlue"
        android:layout_marginLeft="20dp"
        android:textColorHint="@color/colorBlue"
        android:id="@+id/editdoctorName"
        />

    <EditText
        android:id="@+id/editSpecialisation"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/textProfile"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="90dp"
        android:layout_toRightOf="@id/editdoctorName"
        android:background="@drawable/button"
        android:hint="Specialisation"
        android:textAlignment="center"
        android:textColor="@color/colorBlue"
        android:textColorHint="@color/colorBlue"
        android:textStyle="bold" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/editdoctorName"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/editSpecialisation"
        android:background="@drawable/button"
        android:hint="Doctor Id"
        android:textColor="@color/colorBlue"
        android:textAlignment="center"
        android:textColorHint="@color/colorBlue"
        android:textStyle="bold"
        android:id="@+id/editDocId"/>

    <EditText
        android:id="@+id/editDocEmail"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/editSpecialisation"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/colorBlue"
        android:layout_toRightOf="@id/editDocId"
        android:background="@drawable/button"
        android:hint="Email Id"
        android:textAlignment="center"
        android:textColorHint="@color/colorBlue"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="#2e0239"
        android:id="@+id/buttonSubmit"
        android:layout_below="@id/editDocId"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/buttonDashboard"
        android:layout_width="550dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSubmit"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="39dp"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@id/buttonSubmit"
        android:background="@drawable/newbutton"
        android:text="Dashboard"
        android:textColor="#fff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonListOfDoctors"
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSubmit"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:layout_toRightOf="@id/buttonDashboard"
        android:background="@drawable/newbutton"
        android:text="List OF Doctors"
        android:textColor="#ffffff"
        android:textStyle="bold" />


</RelativeLayout>
